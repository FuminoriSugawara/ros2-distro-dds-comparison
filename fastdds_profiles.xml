<?xml version="1.0" encoding="UTF-8"?>
<dds>
  <profiles>
    <!-- デフォルトの参加者プロファイル。必要に応じて data-sharing/shm を切り替えてください。 -->
    <participant profile_name="default_participant" is_default_profile="true">
      <rtps>
        <!-- Fast DDS が提供するデフォルトトランスポートを使う（tag 名は camelCase が正しい） -->
        <useBuiltinTransports>true</useBuiltinTransports>
        <!-- properties は propertiesPolicy 配下に置く必要がある -->
        <propertiesPolicy>
          <properties>
            <!-- 共有メモリの自動リサイズを有効化 -->
            <property>
              <name>fastdds.shm.automatic_resize</name>
              <value>true</value>
            </property>
            <!-- data-sharing を強制的に無効化したい場合は以下を true にする -->
            <!--
            <property>
              <name>fastdds.shm.disable</name>
              <value>true</value>
            </property>
            -->
          </properties>
        </propertiesPolicy>
      </rtps>
    </participant>
  </profiles>
</dds>
